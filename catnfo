#! /bin/bash

dir=$1

if [ -z "${dir}" ]; then
    echo "Missing directory parameter. Usage: ~/.catnfo <DIRECTORY>"
    exit 1
fi

if [ ! -d "${dir}" ]; then
    exit 1
fi

if [[ `ls "${dir}/" | wc -l | bc` -eq 0 ]]; then
    exit 1
fi

nfo=`ls ${dir}/* | grep '\.nfo' --color=never`

echo "-----------------"
echo ${nfo}
echo "-----------------"

cat ${nfo}

exit 0
