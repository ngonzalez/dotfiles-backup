#! /bin/bash

dir=$1

if [ -z "${dir}" ]; then
    echo "Missing directory parameter. Usage: ~/.catsfv <DIRECTORY>"
    exit 1
fi

if [ ! -d "${dir}" ]; then
    exit 1
fi

if [[ `ls "${dir}/" | wc -l | bc` -eq 0 ]]; then
    exit 1
fi

sfv=`ls ${dir}/* | grep '\.sfv' --color=never`

echo "-----------------"
echo ${sfv}
echo "-----------------"

cat ${sfv}
