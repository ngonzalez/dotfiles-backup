#! /bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
LIGHT_GREY='\033[0;37m'
DARK_GREY='\033[1;30m'
NC='\033[0m' # No Color

dir=$1
cue_file=$2

if [ -z "${dir}" ]; then
    echo "Missing directory parameter. Usage: check_cue <DIRECTORY> <CUE_FILE>"
    exit 1
fi

if [ ! -d "${dir}" ]; then
    exit 1
fi

if [[ `ls "${dir}/" | wc -l | bc` -eq 0 ]]; then
    exit 1
fi

if [ -z "${cue_file}" ]; then
    echo "Missing cue_file parameter. Usage: check_cue <DIRECTORY> <CUE_FILE>"
    exit 1
fi

if [ ! -f "${cue_file}" ]; then
    exit 1
fi

file=`cat ${cue_file} | grep 'FILE' --color=never | cut -d\" -f2`
if [ -f "${dir}/${file}" ]; then
    echo -e "${DARK_GREY}${d} ${NC}${LIGHT_GREY}${dir}${NC} ${file} ${GREEN}âœ“${NC}"
else
    echo -e "${RED}${dir}: ${file} not found${NC}"
fi

exit 0
